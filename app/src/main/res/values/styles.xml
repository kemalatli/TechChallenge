<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Colors to be used by the application -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/textLabel</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/textLabel</item>

        <!-- Text style for text fields -->
        <item name="android:textAppearance">@style/TextAppearance.TechChallenge</item>
        <!-- Text style for helper fields -->
        <item name="textAppearanceCaption">@style/TextAppearance.TechChallenge</item>
        <!-- Text style for buttons -->
        <item name="textAppearanceButton">@style/TextAppearance.TechChallenge.Button</item>
        <!-- Text style for input fields -->
        <item name="textInputStyle">@style/Widget.TechChallenge.Input</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TechChallenge</item>
        <!-- Shape properties of small views like buttons -->
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.TechChallenge.Small</item>
        <!-- Shape properties of medium views like cards -->
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.TechChallenge.Medium</item>

    </style>

    <!-- Default text appearance -->
    <style name="TextAppearance.TechChallenge" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textLabel</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">12.00sp</item>
    </style>

    <!-- Default toolbar text appearance -->
    <style name="TextAppearance.TechChallenge.Toolbar">
        <item name="android:textColor">@color/textButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16.00sp</item>
    </style>

    <!-- Default button text appearance -->
    <style name="TextAppearance.TechChallenge.Button">
        <item name="android:textColor">@color/textButton</item>
    </style>

    <!-- Default header text appearance -->
    <style name="TextAppearance.TechChallenge.Header" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">27.00sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Shape appearances -->
    <style name="AppShapeAppearance.TechChallenge.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="AppShapeAppearance.TechChallenge.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Default input appearance -->
    <style name="Widget.TechChallenge.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TechChallenge</item>
    </style>

    <!-- Outlined button style -->
    <style name="Widget.TechChallenge.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/accent</item>
    </style>

</resources>
